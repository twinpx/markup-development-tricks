@import '../../styl/component-include.styl'

html.i-overflow-hidden

  &,
  body
    overflow hidden
    
.b-mobile-slide-menu
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  transition( margin-top .3s ease )
  z-index 100
  
  @media( min-width 768px )
    display none
    
  &.i-hidden
    transform( translateY( -100% ))
  
  &__slide-container
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 1
    
  &__menu-container
    position absolute
    top calc( 50% - 35px )
    left 20px
    transition( all .5s ease )
    z-index 5
  
  .b-msm-slide
    background-repeat no-repeat
    background-position center
    background-size cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition( opacity .5s ease )
    z-index 0
    
    &.i-sub
      z-index 2
    
    &.i-active
      z-index 3
    
    &.i-animate
      opacity 0
    
  .b-msm-menu-item
    color #fff
    line-height 75px
    transition( all .2s ease )
    
    a
      font-size 2rem
      font-weight 400
      display inline-block
      vertical-align middle
      line-height 1.15
      transition( all .2s ease )
      
      &,
      &:focus,
      &:active
        color #fff
        text-decoration none
    
    &.i-active
      transform( translateX( 20px ))
      
      a
        font-size 3rem
        font-weight 500
      
  &__gradient
    background linear-gradient( 180deg, #142045, transparent )
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    pointer-events none
    z-index 4
    
  &__menu-center
    position absolute
    top calc( 50% - 30px )
    left 0
    width 15px
    height 60px
    pointer-events none
    background-color red
    border-radius 0 15px 15px 0
    z-index 5
